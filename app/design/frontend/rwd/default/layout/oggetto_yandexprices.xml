<layout>
    <catalog_product_view>
        <reference name="product.info">
            <block type="oggetto_yandexprices/price" name="product.info.yandexprice" as="yandex_price" template="oggetto_yandexprices/price.phtml"/>
        </reference>
    </catalog_product_view>

    <catalog_category_layered>
        <reference name="product_list">
            <block type="oggetto_yandexprices/category" name="product_list.yandexprice" as="yandex_category_price" template="oggetto_yandexprices/category.phtml"/>
        </reference>
    </catalog_category_layered>
</layout>
